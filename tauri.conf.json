{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "money-note-tauri",
  "version": "0.1.0",
  "identifier": "com.money-note-tauri.dev",
  "build": {
    "frontendDist": "../money-note-web/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Money Note",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:money-note.db"]
    }
  }
}
